!!! 5

%head
  %title DGD
  = stylesheet_link_tag    "application"
  = stylesheet_link_tag    "bootstrap-1.1.0.min"
  = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Bevan"
  = stylesheet_link_tag    "jquery-ui-1.8.13.custom.css"
  = javascript_include_tag "application"
  = csrf_meta_tags

%body
  
  .topbar-wrapper
    .topbar
      .fill
        .container
          %h3
            %a{ :href => root_path, :style => "margin-bottom: -4px;" }
              %span{ :style => "font-family: Bevan, serif; font-size: 25px; font-style: normal; font-weight: 400;" }
                %span{ :style => "color: #38672F; padding: 0px; margin-right: -4px;" }d
                %span gd
          %ul
            %li
              = link_to "Directory", group_index_path
            %li
              = link_to "About"
          
          = form_tag(group_index_path, :method => "get") do 
            = hidden_field_tag 'group_id'
            = text_field_tag 'search', nil, :placeholder => "Search"
          %ul.nav.secondary-nav
            %li
              - if current_user
                = link_to "Logout, #{current_user.name}", signout_path
              - else
                = link_to "Login", "/auth/cas"
  
  .container
    .row
      .span12.columns
        = yield
        
      .span4.columns
        .sidebar-info-box
          .sidebar-header
            %h3.title Dartmouth Group Directory
          .sidebar-content
            %p Welcome to the Dartmouth Group Directory, where your dreams come true. For real. This site is actually amazing beyond all belief.
        .sidebar-info-box
          .sidebar-header
            %h3.title Recently Updated
          .sidebar-content
            - Group.recently_updated(5).each do |group|
              =link_to group.name, group_path(group)
        .sidebar-info-box
          .sidebar-header
            %h3.title Leaderboards
          .sidebar-content
            %p Welcome to the Dartmouth Group Directory, where your dreams come true. For real. This site is actually amazing beyond all belief.
    
:javascript
  var groups = #{@group_hash.to_json};
  