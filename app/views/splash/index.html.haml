!!! 5


%head
  %title DGD
  = stylesheet_link_tag    "application"
  = stylesheet_link_tag    "bootstrap-1.1.0.min"
  = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Bevan"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body

  #splash{ :style => "text-align: center;"}
    .splash-container
      %div{ :style => "margin: 0px auto 20px auto; width: 340px;"}
        %div{ :style => "margin: 20px auto; font-size:24px;"}
          .logo{:style => "margin:0px auto; width:80px;"}
            = image_tag "Shodou.png", :width => '80px', :height => '80px'
          .title{:style => "margin:20px auto 0px auto; text; text-align:center;"}
            %span{:style => "color:#38672F;"} Dartmouth 
            %span{:style => "color:#888;"} Group Directory
      .search
        = form_tag(group_index_path, :method => "get") do 
          = hidden_field_tag 'group_id'
          = text_field_tag 'search', nil, :placeholder => "Search"
      .links
        %ul.pills
          %li
            = link_to 'Directory', group_index_path
          %li
            = link_to "About", about_path
          %li
          - if @current_user.nil?
            %li= link_to "Log In", "/auth/cas"
          - else
            %li= link_to "Log Out", signout_path

:javascript
  var groups = #{Group.all.map {|g| {:label => g.name, :value => g.name, :id => g.id}}.to_json};
