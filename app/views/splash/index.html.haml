!!! 5


%head
  %title DGD
  = stylesheet_link_tag    "application"
  = stylesheet_link_tag    "bootstrap-1.1.0.min"
  = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Bevan"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body

  #splash
    .splash-container
      %div{ :style => "margin-top:20px; width: 360px; text-align:center;"}

        %div{ :style => "margin: 20px auto 20px 30px; font-size:24px;"}
          %span{ :style => "color:#38672F; line-height:36px;"}
            Dartmouth
          %span
            Group Directory
      .search
        = form_tag(group_index_path, :method => "get") do 
          = hidden_field_tag 'group_id'
          = text_field_tag 'search', nil, :placeholder => "Search"
      .links
        %ul.pills
          %li
            = link_to 'Directory', group_index_path
          %li
            %a About
          %li
            = link_to "Log In", "auth/cas"

:javascript
  var groups = #{@group_hash.to_json};