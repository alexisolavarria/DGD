#directory
  %div{ :style => "margin: 20px auto 20px auto; width: 300px;"}
    %span{ :style => "font-family: Bevan, serif; font-size: 100px; font-style: normal; font-weight: 400; color: black;" }
      %span{ :style => "color: #38672F; padding: 0px; margin-right: -21px;" }d
      %span{ :style => "margin-bottom: 100px;"}
        gd
        %span{ :style => "font-size: 40px; vertical-align: top; line-height: 0px;" }*
    %div{ :style => "margin: 20px auto 20px 30px;"}
      *Dartmouth Group Directory

  %ul.pills{ :style => "float: right; cursor: pointer;" }
    %li
      %a.expand_all Expand All
    %li
      %a.collapse_all Collapse All
  
  .categories{ :style => "margin-top: 65px;"}
    - i = 0
    - @categories_hash.each_pair do |id, category|
      - i += 1
      %div{ :class => i % 2 == 0 ? "category_nostripe" : "category_stripe" }
        %h4.category_header{ :id => category.category.gsub(" ","").gsub(/[^[:alnum:]]/, '')  }= category.category
        .groups_container{ :id => category.category.gsub(" ","").gsub(/[^[:alnum:]]/, '')  }
          %ul.groups_list
            - category.groups.each do |group|
              %li
                = link_to group.name.sub(/Dartmouth /,"").truncate(40), group_path(group)