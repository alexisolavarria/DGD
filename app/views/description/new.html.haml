- content_for :sidebar do
  = render :partial => "sidebar/description"

#group
  .title
    %h1= "#{@group.name}"

#edit_description
  = form_tag(group_description_index_path, :method => "post")
  %textarea.xxlarge{ :rows => 25, :style => "width: 100%", name: "description" }
    = @description.html_safe if @description.present?
  .actions
    %input.btn.btn-primary.btn-large{type:"submit", value:"Add Description", style:"cursor:pointer;margin-top:3px;"}
    = link_to 'Cancel', group_path(@group), :class => "btn btn-large btn-danger"
    
